server {
    listen {{ hostvars[inventory_hostname]['ansible_' + target_iface]['ipv4']['address'] }}:8080;
    server_name localhost;

    location / {
        root /var/www/html;
        index index.html index.nginx-debian.html;
    }

    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /var/www/html;
    }
}